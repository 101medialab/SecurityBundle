{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
<span style="white-space:nowrap; color:#2f2f2f; display:inline-block; min-height:24px; border-right:1px solid #cdcdcd; padding:5px 10px 5px 6px; ">
    <img width="28" height="28" alt="Security" style="vertical-align: middle; margin-right: 10px;" src="data:image/png;base64," />
    <span style="color: #3a3">
        {% if collector.authenticated %}
            {{ collector.user }}
        {% elseif collector.enabled %}
            anon.
        {% else %}
            disabled
        {% endif %}
    </span>
</span>
{% endblock %}

{% block menu %}
<span class="picto">
    <strong>Security</strong>
</span>
{% endblock %}

{% block panel %}
    <h2>Security</h2>
    {% if collector.authenticated %}
        <p>
            Username: <strong>{{ collector.user }}</strong><br />
            Roles: {{ collector.roles|yaml_encode }}
        </p>
    {% elseif collector.enabled %}
        <p>
            <em>No token</em>
        </p>
    {% else %}
        <p>
            <em>The security component is disabled</em>
        </p>
    {% endif %}
{% endblock %}
